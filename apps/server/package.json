{
  "name": "backend",
  "version": "1.0.0",
  "description": "Express TypeScript API with Drizzle ORM and PostgreSQL",
  "module": "NodeNext", 
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    "./*": "./dist/*.js"
  },
  "_moduleAliases": {
    "@": "dist"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --esm --respawn --transpile-only src/index.ts",
    "premigrate": "node --loader ts-node/esm src/db/scripts/pre-migrate.ts",
    "migrate": "drizzle-kit migrate",
    "generate": "node -r module-alias/register -r tsconfig-paths/register ./node_modules/.bin/drizzle-kit generate",
    "studio": "drizzle-kit studio",
    "test": "NODE_ENV=test jest --config tests/jest.config.ts --runInBand",
    "test:docker": "docker-compose -f tests/docker-compose.yml up -d && npm test"
  },
  "dependencies": {
    "@types/module-alias": "^2.0.4",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.41.0",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "pg": "^8.11.0",
    "pocketbase": "^0.25.2",
    "postgres": "^3.4.5",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.28",
    "@types/pg": "^8.11.11",
    "@types/supertest": "^6.0.3",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.30.5",
    "jest": "^29.7.0",
    "module-alias": "^2.2.3",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.0",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.15",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  }
}
