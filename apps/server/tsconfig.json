{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
    },
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    // Add if you want source maps
    "sourceMap": true,
    "declaration": true // Optional: generate .d.ts files
  },
  "include": ["src/**/*"],  
  "exclude": ["node_modules", "dist"]
}
  