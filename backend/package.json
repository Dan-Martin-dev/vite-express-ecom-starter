{
  "name": "backend",
  "version": "1.0.0",
  "description": "Express TypeScript API with Drizzle ORM and PostgreSQL",
  "type": "module",
  "main": "dist/index.js",
  "_moduleAliases": {
    "@": "dist"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "migrate": "drizzle-kit migrate",
    "generate": "drizzle-kit generate:pg",
    "studio": "drizzle-kit studio"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.0",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "module-alias": "^2.2.3",
    "pg": "^8.11.0",
    "postgres": "^3.4.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.21",
    "@types/node": "^20.9.0",
    "@types/pg": "^8.10.9",
    "drizzle-kit": "^0.20.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
